{
  "name": "ultimate-brew",
  "version": "1.0.0",
  "description": "App for brewing V60",
  "main": "index.js",
  "scripts": {
    "start": "parcel serve src/index.html --open",
    "build": "npm run clean && parcel build src/index.html --no-source-maps --experimental-scope-hoisting",
    "lint": "eslint --ext .svelte,.js src",
    "clean": "rm -rf dist .cache"
  },
  "author": "Denis Davydenko",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "dependencies": {
    "howler": "^2.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "awsm.css": "^3.0.4",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "modern-css-reset": "^1.1.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "parcel-plugin-svelte": "^4.0.6",
    "parcel-plugin-sw-cache": "^0.3.1",
    "postcss": "^7.0.26",
    "postcss-load-config": "^2.1.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "svelte": "^3.18.1",
    "svelte-preprocess": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint",
      "prettier --write"
    ]
  },
  "cache": {
    "clearDist": true,
    "disablePlugin": true,
    "globPatterns": [
      "**/*.{html,js,css,jpg,png,webp,mp3,webm}"
    ],
    "inDev": false,
    "strategy": "default"
  },
  "staticFiles": {
    "staticPath": "src/assets/static",
    "watcherGlob": "**"
  }
}
